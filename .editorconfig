# Editor configuration, see https://editorconfig.org
# .editorconfig: This is a simple file which is used to maintain consistency in code editors to
#  organize some basics such as indentation and whitespaces.
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
